<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Vino">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="102dp"
        android:layout_height="61dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/ruda"
        android:gravity="center"
        android:text="Perfil"
        android:textColor="@color/beige"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/ruda"
        android:gravity="center"
        android:text="Pepitojm"
        android:textColor="@color/beige"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFotoPerfil" />


    <TextView
        android:id="@+id/pasos_totales"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/ruda"
        android:gravity="center"
        android:text="Pasos"
        android:textColor="@color/beige"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/pokemons_totales"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/ruda"
        android:gravity="center"
        android:text="Pokemons Totales"
        android:textColor="@color/beige"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/pasos_totales"
        app:layout_constraintTop_toBottomOf="@+id/pasos_totales" />

    <TextView
        android:id="@+id/Genero"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/ruda"
        android:gravity="center"
        android:text="genero"
        android:textColor="@color/beige"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/pokemons_totales"
        app:layout_constraintTop_toBottomOf="@+id/pokemons_totales" />

